{
  "name": "customer-service-ai-assistant",
  "version": "1.0.0",
  "description": "AI-powered customer service chat application",
  "main": "dist/server.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsx build server/index.ts --outdir=dist --outfile=server.js",
    "dev": "NODE_ENV=development tsx server/index.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "drizzle-orm": "^0.28.0",
    "@neondatabase/serverless": "^0.5.0",
    "openai": "^4.0.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  }
}